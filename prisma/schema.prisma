// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// RBAC Enums
// ==========================================

enum SystemRole {
  SUPER_ADMIN // Full platform access, can manage everything
  ADMIN       // Can manage users, departments, and module access
  MANAGER     // Can manage content within their department's modules
  MEMBER      // Standard user with view/interact access to assigned modules
}

// ==========================================
// Auth & User models
// ==========================================

model User {
  id                   String                 @id @default(cuid())
  name                 String?
  email                String?                @unique
  password             String? // Hashed password for credentials auth
  emailVerified        DateTime?
  image                String?
  role                 SystemRole             @default(MEMBER)
  departmentId         String?
  jobTitle             String?
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  department           Department?            @relation(fields: [departmentId], references: [id])
  accounts             Account[]
  sessions             Session[]
  progress             UserProgress[]
  badges               Badge[]
  quizAttempts         QuizAttempt[]
  certificates         Certificate[]
  greenwashingFeedback GreenwashingFeedback[]
  greenwashingSearches GreenwashingSearch[]
  kanbanCards          KanbanCard[]         @relation("KanbanAssignee")
  ownedProjects        Project[]            @relation("ProjectOwner")
  announcements        Announcement[]       @relation("AnnouncementAuthor")
  leavePolicies        LeavePolicy[]
  leaveEntries         LeaveEntry[]
  leaveEntriesCreated  LeaveEntry[]         @relation("LeaveCreatedBy")
  timeInLieuAdjustments TimeInLieuAdjustment[]
  timeInLieuAdjustmentsAdded TimeInLieuAdjustment[] @relation("TimeInLieuAddedBy")
  impactAssessments    ImpactAssessment[]
  impactProfile        ImpactProfile?
  raciVersions         RaciVersion[]      @relation("RaciVersionCreator")

  @@index([departmentId])
  @@index([role])
}

// ==========================================
// RBAC Models
// ==========================================

model Department {
  id           String                   @id @default(cuid())
  name         String                   @unique // e.g., "Board", "C-Suite", "Finance"
  slug         String                   @unique // e.g., "board", "c-suite", "finance"
  description  String?
  mission      String?                  // Team mission statement, editable by super admin
  icon         String?                  // emoji or icon identifier
  color        String?                  // hex color for UI
  googleOUPath String?                  // Google Workspace OU path, e.g., "/C-Suite", "/Finance"
  order        Int                      @default(0) // display order
  isActive     Boolean                  @default(true)
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt
  // RAG (Red/Amber/Green) status fields
  ragStatus      String                 @default("GREEN") // GREEN, AMBER, RED
  ragReason      String?                // Current status reason
  ragPriority    String?                // P1, P2, P3, or null
  ragLastUpdated DateTime               @default(now()) // When RAG status was last changed
  ragUpdatedBy   String?                // User ID who last updated RAG status
  users        User[]
  moduleAccess DepartmentModuleAccess[]
  kanbanCards  KanbanCard[]
  ragHistory   RagStatusHistory[]

  @@index([slug])
  @@index([googleOUPath])
  @@index([ragPriority])
}

model PlatformModule {
  id          String                   @id @default(cuid())
  name        String                   @unique // e.g., "Training", "Management", "BCorp"
  slug        String                   @unique // e.g., "training", "management", "bcorp"
  description String?
  icon        String?                  // emoji or icon identifier
  color       String?                  // hex color for the module card
  route       String                   // the base route, e.g., "/training", "/management"
  isActive    Boolean                  @default(true)
  order       Int                      @default(0) // display order
  createdAt   DateTime                 @default(now())
  updatedAt   DateTime                 @updatedAt
  departmentAccess DepartmentModuleAccess[]

  @@index([slug])
}

model DepartmentModuleAccess {
  id               String         @id @default(cuid())
  departmentId     String
  platformModuleId String
  minRole          SystemRole     @default(MEMBER) // minimum role required within this dept
  canView          Boolean        @default(true)
  canEdit          Boolean        @default(false)
  canManage        Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  department       Department     @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  platformModule   PlatformModule @relation(fields: [platformModuleId], references: [id], onDelete: Cascade)

  @@unique([departmentId, platformModuleId])
  @@index([departmentId])
  @@index([platformModuleId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Learning Hub Models
model Course {
  id           String        @id @default(cuid())
  slug         String        @unique // e.g., "netzero", "greenwashing"
  title        String
  description  String
  icon         String? // emoji or icon
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  modules      Module[]
  certificates Certificate[]
}

model Module {
  id           String         @id @default(cuid())
  courseId     String
  title        String
  description  String
  order        Int // order within course
  duration     Int // minutes
  content      String // JSON content
  badgeName    String
  badgeEmoji   String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  course       Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  quizzes      Quiz[]
  userProgress UserProgress[]
  badges       Badge[]
  certificates Certificate[]

  @@unique([courseId, order])
  @@index([courseId])
}

model Quiz {
  id            String        @id @default(cuid())
  moduleId      String
  question      String
  options       String // JSON array
  correctAnswer Int // index of correct answer
  explanation   String?
  order         Int // order within module
  module        Module        @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  quizAttempts  QuizAttempt[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([moduleId])
}

model UserProgress {
  id           String    @id @default(cuid())
  userId       String
  moduleId     String
  completed    Boolean   @default(false)
  completedAt  DateTime?
  timeSpent    Int       @default(0) // seconds
  quizScore    Float? // percentage
  quizAttempts Int       @default(0)
  lastAccessed DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  module       Module    @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, moduleId])
  @@index([userId])
  @@index([moduleId])
  @@index([lastAccessed])
}

model AllowedDomain {
  id        String   @id @default(cuid())
  domain    String   @unique // e.g., "carma.earth", "example.com"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([domain])
}

model GreenwashingFeedback {
  id              String   @id @default(cuid())
  userId          String?
  statement       String
  wasGreenwashing Boolean // What user thinks (true = is greenwashing, false = not greenwashing)
  aiPrediction    Boolean // What AI predicted (true = is greenwashing, false = not greenwashing)
  userComment     String? // Optional user comment
  createdAt       DateTime @default(now())
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
}

model GreenwashingSearch {
  id                   String   @id @default(cuid())
  userId               String?
  statement            String
  sourceType           String? // 'text' | 'image' | 'website'
  imageUrl             String? // URL to uploaded image
  websiteUrl           String? // URL of website analyzed
  isGreenwashing       Boolean // AI prediction
  confidence           Int // Confidence score (0-100)
  riskLevel            String // 'high' | 'medium' | 'low'
  trustScore           Int // Overall trust score (0-100)
  claimValidity        Int // Claim validity score (0-100)
  documentationQuality Int // Documentation quality score (0-100)
  consistencyScore     Int // Consistency score (0-100)
  category             String? // Claim category
  annotationTypes      String? // JSON array of annotation types
  redFlags             String? // JSON array of red flags
  techniqueId          String? // Taxonomy technique ID (GW_VAGUE_PROMISE, GH_SELECTIVE_SILENCE, etc.)
  classification       String? // 'Greenwashing' | 'Greenhushing' | 'Greenwishing' | 'Legitimate'
  createdAt            DateTime @default(now())
  user                 User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
  @@index([isGreenwashing])
  @@index([riskLevel])
  @@index([sourceType])
  @@index([classification])
  @@index([techniqueId])
}

model Badge {
  id       String   @id @default(cuid())
  userId   String
  moduleId String
  earnedAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  module   Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
  @@index([userId])
}

model QuizAttempt {
  id             String   @id @default(cuid())
  userId         String
  quizId         String
  selectedAnswer Int
  isCorrect      Boolean
  attemptedAt    DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz           Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([quizId])
  @@index([userId, attemptedAt])
}

model Certificate {
  id             String   @id @default(cuid())
  userId         String
  courseId       String
  moduleId       String? // If null, it's a course certificate; if set, it's a module certificate
  issuedAt       DateTime @default(now())
  certificateUrl String? // URL to generated certificate
  businessName   String? // Business name for certificate
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course         Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  module         Module?  @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId, moduleId])
  @@index([userId])
  @@index([courseId])
  @@index([moduleId])
}

// ==========================================
// Intranet Models
// ==========================================

model KanbanCard {
  id           String     @id @default(cuid())
  departmentId String
  title        String
  description  String?
  status       String     @default("todo") // todo, doing, blocked, done
  assigneeId   String?
  order        Int        @default(0)
  doneAt       DateTime? // set when moved to "done"
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  assignee     User?      @relation("KanbanAssignee", fields: [assigneeId], references: [id])

  @@index([departmentId, status])
  @@index([assigneeId])
  @@index([doneAt])
  @@index([createdAt])
}

model Project {
  id         String   @id @default(cuid())
  name       String
  ownerId    String
  objective  String?
  status     String   @default("active") // active, on-hold, completed
  timeline   String?
  link       String?
  isArchived Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  owner      User     @relation("ProjectOwner", fields: [ownerId], references: [id])

  @@index([status])
  @@index([ownerId])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  authorId  String
  isPinned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation("AnnouncementAuthor", fields: [authorId], references: [id])
}

// ==========================================
// RAG (Red/Amber/Green) Status History
// ==========================================

model RagStatusHistory {
  id           String     @id @default(cuid())
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  status       String     // GREEN, AMBER, RED
  reason       String
  updatedBy    String?
  createdAt    DateTime   @default(now())

  @@index([departmentId])
  @@index([createdAt])
}

// ==========================================
// Audit Log
// ==========================================

model AuditLog {
  id         String   @id @default(cuid())
  timestamp  DateTime @default(now())
  userId     String?  // null for system events
  userEmail  String?  // denormalised for quick display
  action     String   // e.g. "USER_LOGIN", "COURSE_COMPLETED", "RAG_UPDATED", "SYSTEM_ERROR"
  category   String   // "AUTH", "LEARNING", "ADMIN", "SYSTEM", "KANBAN", "RAG"
  severity   String   @default("INFO") // "INFO", "WARN", "ERROR", "CRITICAL"
  detail     String?  // human-readable description
  metadata   String?  // JSON blob with extra context (IP, user-agent, ids, etc.)
  targetId   String?  // ID of the affected entity (userId, courseId, etc.)
  targetType String?  // "User", "Course", "Module", "Department", etc.
  ipAddress  String?
  userAgent  String?
  durationMs Int?     // for performance tracking

  @@index([timestamp])
  @@index([userId])
  @@index([action])
  @@index([category])
  @@index([severity])
  @@index([targetId])
  @@index([category, timestamp])
}

model RagKeyMetric {
  id           String   @id @default(cuid())
  label        String   @unique // "Active Customers", "% to Annual Target", etc.
  value        String   @default("") // Current display value
  targetValue  String?  // Target (e.g. "Â£1m", "1,000", "5%")
  trend        String?  // e.g. "+32 this quarter"
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([order])
}

model RagPriority {
  id             String    @id @default(cuid())
  label          String    // "Ship Trust System", etc.
  order          Int       @default(0)
  owner          String?   // Owner name or department
  dueDate        DateTime? // Due date
  percentComplete Int      @default(0) // 0-100
  status         String?   // "On Track", "At Risk", "Complete"
  workstreamUrl  String?   // Link to board/workstream
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([order])
}

// ==========================================
// Time Off Module
// ==========================================

model LeaveYear {
  id        String   @id @default(cuid())
  startDate DateTime // 1 April
  endDate   DateTime // 31 March
  locked    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  policies  LeavePolicy[]
  entries   LeaveEntry[]
  timeInLieuAdjustments TimeInLieuAdjustment[]

  @@index([startDate])
}

model LeavePolicy {
  id                   String    @id @default(cuid())
  userId               String
  leaveYearId          String
  annualLeaveAllowance Int       @default(23)
  carryOverDays        Int       @default(0)
  adjustmentDays       Int       @default(0)
  sickTrackingMode     String    @default("tracked") // "tracked" | "unlimited"
  notes                String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveYear            LeaveYear @relation(fields: [leaveYearId], references: [id], onDelete: Cascade)

  @@unique([userId, leaveYearId])
  @@index([userId])
  @@index([leaveYearId])
}

model LeaveEntry {
  id                   String    @id @default(cuid())
  userId               String
  leaveYearId          String
  type                 String    // annual_leave | sick_leave | bereavement_* | personal_leave | jury_duty | emergency_leave | temporary_leave | leave_without_pay | other
  startDate            DateTime
  endDate              DateTime
  allDay               Boolean   @default(true)
  durationDays         Float
  status               String    @default("requested") // requested | approved | rejected | cancelled | pending_manager_approval | needs_discussion | pending_cancellation
  statusBeforeCancellation String? // When status is pending_cancellation, stores prior status for revert on rejection
  createdById          String?
  reason               String?
  conflictCheckResult  String?   // JSON summary
  googleEventId        String?   // Employee calendar event ID
  sharedEventId        String?   // Holiday Tracker event ID
  isSingleDay          Boolean   @default(true)
  singleDayPart        String?   // AM | PM | full_day
  leaveTypeOther       String?
  notes                String?
  managerId            String?
  managerName          String?
  managerApproval      String?   // yes | no | speak_to_line_manager
  managerNotes         String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveYear            LeaveYear @relation(fields: [leaveYearId], references: [id], onDelete: Cascade)
  createdBy            User?     @relation("LeaveCreatedBy", fields: [createdById], references: [id])

  @@index([userId])
  @@index([leaveYearId])
  @@index([status])
  @@index([startDate])
  @@index([managerId])
}

model TimeInLieuAdjustment {
  id          String    @id @default(cuid())
  userId      String
  leaveYearId String
  days        Float     // Days of time in lieu (can be 0.5 for half-day)
  reason      String?   // e.g. "Overtime week of 12 Jan"
  addedById   String
  addedByName String?
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveYear   LeaveYear @relation(fields: [leaveYearId], references: [id], onDelete: Cascade)
  addedBy     User      @relation("TimeInLieuAddedBy", fields: [addedById], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([leaveYearId])
  @@index([createdAt])
}

model LeaveAuditLog {
  id        String   @id @default(cuid())
  action    String   // "CREATE" | "APPROVE" | "REJECT" | "ADJUST_ALLOWANCE"
  userId    String?
  targetId  String?
  detail    String?
  metadata  String?  // JSON
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// ==========================================
// Impact Alignment Module
// ==========================================

// ==========================================
// RACI Module
// ==========================================

enum RaciDomain {
  GOVERNANCE
  SALES
  PRODUCT_PLATFORM
  DELIVERY_MRV
  PEOPLE
  FINANCE
}

enum RaciRole {
  R // Responsible
  A // Accountable
  C // Consulted
  I // Informed
}

model RaciVersion {
  id            String        @id @default(cuid())
  versionNumber Int
  createdAt     DateTime      @default(now())
  createdById   String?
  createdBy     User?         @relation("RaciVersionCreator", fields: [createdById], references: [id])
  outcomes      RaciOutcome[]

  @@index([versionNumber])
}

model RaciOutcome {
  id          String           @id @default(cuid())
  slug        String
  title       String
  domain      RaciDomain
  kpi         String
  order       Int              @default(0)
  versionId   String
  version     RaciVersion      @relation(fields: [versionId], references: [id], onDelete: Cascade)
  assignments RaciAssignment[]

  @@unique([versionId, slug])
  @@index([versionId])
  @@index([domain])
}

model RaciAssignment {
  id                 String      @id @default(cuid())
  outcomeId          String
  personName         String
  role               RaciRole
  isJointAccountable Boolean     @default(false)
  isTemporary        Boolean     @default(false)
  notes              String?
  outcome            RaciOutcome @relation(fields: [outcomeId], references: [id], onDelete: Cascade)

  @@index([outcomeId])
  @@index([personName])
}

model ImpactAssessment {
  id              String   @id @default(cuid())
  userId          String
  strategistScore Float    @default(5)
  ideasScore      Float
  executionScore  Float
  peopleScore     Float
  excellenceScore Float
  rawAnswers      Json     // Array of 30 individual slider scores (5 dimensions x 6 questions)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile         ImpactProfile?

  @@index([userId])
  @@index([createdAt])
}

model ImpactProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  assessmentId      String   @unique
  narrativeJson     Json?    // Full structured narrative (new format). Null = legacy profile.
  headlineSummary   String?  // Legacy - kept for backward compat
  atYourBest        Json?    // Legacy
  atYourWorst       Json?    // Legacy
  underStress       Json?    // Legacy
  howToWorkWithYou  Json?   // Legacy
  growthNote        String?  // Legacy
  lastGeneratedAt   DateTime @default(now())
  editLockedUntil   DateTime // 24 hours after generation
  version           Int      @default(1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  assessment        ImpactAssessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  @@index([userId])
}
